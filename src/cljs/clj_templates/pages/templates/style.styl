.templates
  font-size font-size-small

  .templates-listing
    display flex
    flex-wrap wrap

  .search-input
    border 1px solid lightgrey
    border-radius 5px
    width 100%
    height 3rem
    font-size 1.3rem
    padding 5px
    box-sizing border-box


  .keyword
    font-family font-code
    color color-keyword
    padding-bottom 0
    margin-bottom 0

  .usage
    font-family font-code

  .template-title
    display flex
    flex-direction row
    align-items center

  .templates-spinner
    margin-left 1rem

  .template
    margin-top 1rem
    border-top 3px solid color-keyword
    box-shadow 0px 2px 1px 1px rgba(130, 130, 130, 0.5);
    padding 1rem
    flex-grow 1
    width 20rem
    margin-left 0.3rem
    margin-right 0.3rem

    .title
      margin-bottom 0.6rem
      font-size 1.2rem
      font-weight 400

      a
        color color-secondary
        text-decoration none
        &:hover
          text-decoration underline

    .description
      margin-bottom 1rem
