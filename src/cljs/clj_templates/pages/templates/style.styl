.templates
  font-size font-size-small

  .intro-text
    font-size font-size-medium
    margin-bottom 2rem

  .search-input
    border 1px solid lightgrey
    border-radius 5px
    width 100%
    height 4rem
    font-size font-size-large
    padding 5px
    box-sizing border-box

  .keyword
    font-family font-code
    color color-keyword
    padding-bottom 0
    margin-bottom 0

  .code
    font-family font-code
    color color-darkgrey

  .template-attribute
    margin-bottom 0.4rem

  .templates-spinner
    margin 0 auto
    margin-top 1rem

  .status-text
    margin-top 0.5rem
    min-height 1rem
    color grey

  .results-for
    margin-top 0.3rem
    color color-darkgrey
    font-size font-size-medium

  .no-results
    font-size font-size-medium

  .templates-listing
    margin-top 1rem
    transition opacity 0.3s
    display grid
    grid-column-gap 0.7rem
    grid-row-gap 1rem
    @media all and (min-width: screen-breakpoint-medium)
      grid-template-columns:repeat(2, 1fr)
    @media all and (min-width: screen-breakpoint-large)
      grid-template-columns:repeat(3, 1fr)
    &.loading
      opacity 0.5

  .template
    border-top 3px solid color-keyword
    box-shadow 0px 2px 4px 1px rgba(130, 130, 130, 0.5);
    padding 1rem
    transition box-shadow 0.2s
    text-decoration none
    color inherit

    &:hover
      box-shadow 3px 2px 11px 6px rgba(130, 130, 130, 0.5);

    .title
      font-size font-size-medium
      font-weight 400
      color color-darkgrey

    a.title
      color color-secondary
      text-decoration none

      &:hover
        text-decoration underline

    .description
      font-size 0.9rem
      margin-top 0.5rem
      margin-bottom 1rem

    .info-row
      display flex
      flex-direction row
      justify-content space-between

    .template-icons
      img
        margin-right 0.5rem
        transition filter 0.5s

    .not-available
      filter grayscale(100%)

  .pagination
    margin-top 0.5rem
    display flex
    flex-direction row
    flex-wrap wrap

    .pagination-link
      margin-right 1rem
      color color-secondary
      font-size font-size-large
      text-decoration none
      &:hover
        cursor pointer

    .current-page
      color color-keyword
      font-weight font-bold-weight
      text-decoration underline
      cursor default
      &:hover
        cursor default
